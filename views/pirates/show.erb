<h1>Pirates</h1>

  <div class="pirate"> 
    <h3> Name: <%= @pirate.name %> </h3> <br>
    <h3> Weight: <%= @pirate.weight %> </h3>
    <h3> Height: <%= @pirate.height %> </h3>
  </div><br>


<h2>Ships</h2>
  <% @ships.each do |ship| %>
   <div class="ship"> 
    <h3> Name: <%= ship.name %> </h3> <br>
    <h3> Type: <%= ship.type %> </h3> <br>
    <h3> Booty: <%= ship.booty %> </h3>
  </div><br>
  <% end %>